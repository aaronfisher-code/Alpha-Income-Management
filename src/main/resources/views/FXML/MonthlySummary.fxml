                        <TableColumn fx:id="otcItemsCol" prefWidth="75.0" styleClass="defaultColumn" text="No. of OTC&#10;items" />
                        <TableColumn fx:id="itemsPerCustomerCol" prefWidth="75.0" styleClass="yellowColumn" text="Items/&#10;Customer" />
                        <TableColumn fx:id="otcPerCustomerCol" prefWidth="75.0" styleClass="yellowColumn" text="OTC/&#10;Customer" />
